<div class="row" style="display: flex;justify-content: center">
    <form class="form-signin mg-btm" action="/user/signup" method="post">
        <div class="header-box">
            <div class="row">
                <div class="col-md-12">
                   <h2>Sign Up</h2>
                </div>
            </div>
        </div>
        <div class="main">
            {{#if hasErrors}}
                <div class="alert alert-danger">
                    {{#each messages}}
                        <p>{{this}}</p>
                    {{/each}}
                </div>
            {{/if}}

            <input type="text" class="form-control" placeholder="Email" id="email" name="email" autofocus>
            <input type="password" class="form-control" placeholder="Password" id="password" name="password">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <span class="clearfix"></span>
        </div>
        <div class="login-footer">
            <div class="row">
                <div class="col-xs-6 col-md-6">
                    <div class="left-section">
                       Already have have an account? <a href="/user/signin"> Sign in Now</a>
                    </div>
                </div>
                <div class="col-xs-6 col-md-6 pull-right">
                    <button type="submit" class="btn btn-large btn-danger pull-right">Sign Up</button>
                </div>
            </div>

        </div>
    </form>
</div>