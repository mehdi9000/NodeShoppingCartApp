    <div class="row" style="display: flex;justify-content: center">
        <form class="form-signin mg-btm" action="/user/signin" method="post">
            <div class="social-box">
                <div class="row mg-btm">
                    <div class="col-md-12">
                        <a href="#" class="btn btn-primary btn-block">
                            <i class="icon-facebook"></i>    Login with Facebook
                        </a>
                    </div>
                </div>
            </div>

            <div class="main">
                {{#if hasErrors}}
                    <div class="alert alert-danger">
                        {{#each messages}}
                            <p>{{this}}</p>
                        {{/each}}
                    </div>
                {{/if}}

                <input type="text" class="form-control" placeholder="Email" id="email" name="email" autofocus>
                <input type="password" class="form-control" placeholder="Password" id="password" name="password">
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                <span class="clearfix"></span>
            </div>
            <div class="login-footer">
                <div class="row">
                    <div class="col-xs-6 col-md-6">
                        <div class="left-section">
                            Don't have an account? <a href="/user/signup"> Sign Up Now</a>
                        </div>
                    </div>
                    <div class="col-xs-6 col-md-6 pull-right">
                        <button type="submit" class="btn btn-large btn-danger pull-right">Login</button>
                    </div>
                </div>

            </div>
        </form>
    </div>
